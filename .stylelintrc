{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
        "number-leading-zero": null,
        "indentation": [
            4,
            {
                "severity": "warning"
            }
        ],
        "declaration-empty-line-before": [
            "never",
            {
                "ignore": [
                    "after-declaration"
                ]
            }
        ]
    }
}
